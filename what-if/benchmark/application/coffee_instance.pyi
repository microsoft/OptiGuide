from typing import Dict, List, Tuple, Optional

# Prefer calling any of the following functions to modify the instance data instead of modifying the instance data directly.
class CoffeeInstance:
    def __init__(self) -> None: ...
    
    # Supplier
    def add_supplier(self, supplier: str, capacity: int) -> None: ...
    def update_supplier(self, supplier: str, capacity: int) -> None: ...
    def delete_supplier(self, supplier: str) -> None: ...

    # Roastery
    def add_roastery(self, roastery: str, light_cost: float, dark_cost: float) -> None: ...
    def update_roastery(self, roastery: str, light_cost: Optional[float] = None, dark_cost: Optional[float] = None) -> None: ...
    def delete_roastery(self, roastery: str) -> None: ...

    # Cafe
    def add_cafe(self, cafe: str, light_needed: int, dark_needed: int) -> None: ...
    def update_cafe(self, cafe: str, light_needed: int, dark_needed: int) -> None: ...
    def delete_cafe(self, cafe: str) -> None: ...

    # Supplier -> Roastery
    def get_suppliers_to_roasteries(self) -> List[Tuple[str, str]]: ...
    def connect_supplier_to_roastery(self, supplier: str, roastery: str, shipping_cost: float) -> None: ...
    def update_supplier_to_roastery(self, supplier: str, roastery: str, shipping_cost: float) -> None: ...
    def disconnect_supplier_to_roastery(self, supplier: str, roastery: str) -> None: ...

    # Roastery -> Cafe
    def get_roasteries_to_cafes(self) -> List[Tuple[str, str]]: ...
    def connect_roastery_to_cafe(self, roastery: str, cafe: str, shipping_cost: float) -> None: ...
    def update_roastery_to_cafe(self, roastery: str, cafe: str, shipping_cost: float) -> None: ...
    def disconnect_roastery_to_cafe(self, roastery: str, cafe: str) -> None: ...
